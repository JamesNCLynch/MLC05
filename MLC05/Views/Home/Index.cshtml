@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="jumbotron carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
        <li data-target="#myCarousel" data-slide-to="6"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="../../Assets/mitchelstownleisurecentre-1024x323.jpg" alt="MLC">
            <div class="carousel-caption">
                <h3>GET FIT</h3>
                <p>Mitchelstown</p>
                <p>Leisure Centre</p>
            </div>
        </div>

        <div class="item">
            <img src="../../Assets/mlc_class-1024x323.jpg" alt="Classes">
            <div class="carousel-caption">
                <p>Something for everybody</p>
                <h3>FITNESS CLASSES</h3>
            </div>
        </div>

        <div class="item">
            <img src="../../Assets/mlc_gym-1-1024x323.jpg" alt="Gym">
            <div class="carousel-caption">
                <p>Fully equipped</p>
                <h3>GYM</h3>
            </div>
        </div>
        
        <div class="item">
            <img src="../../Assets/mlc_hall-1024x323.jpg" alt="Hall">
            <div class="carousel-caption">
                <p>State of the art</p>
                <h3>SPORTS HALL</h3>
            </div>
        </div>

        <div class="item">
            <img src="../../Assets/mlc_astro-1024x323.jpg" alt="Astro">
            <div class="carousel-caption">
                <h3>FLOODLIT</h3>
                <p>All-weather pitch</p>
            </div>
        </div>

        <div class="item">
            <img src="../../Assets/mlc_birthday-1024x323.jpg" alt="Birthday">
            <div class="carousel-caption">
                <p>Let's party</p>
                <h3>MULTI-PURPOSE ROOMS</h3>
            </div>
        </div>

        <div class="item">
            <img src="../../Assets/mlc-activities-1024x323.jpg" alt="Choice">
            <div class="carousel-caption">
                <p>It's your choice</p>
                <h3>MULTI-PURPOSE ROOMS</h3>
            </div>
        </div>

        
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

