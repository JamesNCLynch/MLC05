@model MLC05.Models.ClassAttendance

@{
    ViewBag.Title = "Delete";
}


<h3>Are you sure you wish to cancel your attendance to this class?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Class name:
        </dt>
        <dd>
            @Model.ScheduledClasses.ScheduledClassType.Name
        </dd>
        <dt>
            Class start time:
        </dt>
        <dd>
            @Model.ScheduledClasses.ClassStartTime.ToString("dd-MMM hh:mm")  @Model.ScheduledClasses.ClassStartTime.ToString("tt").ToLower()
        </dd>
        <dt>
            Signup time:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnrolledDate)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Cancel class" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
